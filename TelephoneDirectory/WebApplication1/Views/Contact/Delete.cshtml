@model Entity.Contact

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Contact</h4>
    <hr />
    <div class="card" style="width:18rem;">
        <div class="card-body" style="background-color:#dee2e6">
            <h5>Person Id</h5>
            <p class="card-title">@Html.Raw(Model.PersonId)</p>
            <h5>Tel Number</h5>
            <p class="card-title">@Html.Raw(Model.TelNumber)</p>
            <h5>E-mail</h5>
            <p class="card-text">@Model.Email</p>
            <h5>Location</h5>
            <p class="card-text">@Model.Location</p>
        </div>

    </div>
    <form asp-action="Delete" style="margin-top:20px;">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
