@model Entity.Person

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Person</h4>
    <hr />
    <div class="card" style="width:18rem;">
        <div class="card-body" style="background-color:#dee2e6">
            <h5>Name</h5>
            <p class="card-title">@Html.Raw(Model.Name)</p>
            <h5>Surname</h5>
            <p class="card-title">@Html.Raw(Model.Surname)</p>
            <h5>Company</h5>
            <p class="card-text">@Model.Company</p>
        </div>

    </div>
    <form asp-action="Delete" style="margin-top:20px;">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
